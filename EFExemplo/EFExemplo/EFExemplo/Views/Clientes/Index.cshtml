@model IEnumerable<EFExemplo.Models.Cliente>

@{
    ViewData["Title"] = "Cadastro de clientes";
}

<h1>Cadastro de clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar</a>
</p>
<table class="table table-white table-striped">
    <thead>
        <tr class="table-">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNascimento)
                </td>
                <td class>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.ClienteId">
                        <svg bootstrap-icon="AlarmFill" width="24" height="24" aria-label="Alarms"></svg>
                    </a> |
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.ClienteId">
                        Detalhes
                        <svg bootstrap-icon="CardList" width="16" height="24" aria-label="Editar"></svg>
                    </a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ClienteId">
                        Deletar
                        <svg bootstrap-icon="Trash" width="16" height="16" aria-label="Detalhes"></svg>
                    </a>
                </td>
                <td>

            </tr>
        }
    </tbody>
</table>
